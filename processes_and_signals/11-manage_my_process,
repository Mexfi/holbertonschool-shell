#!/usr/bin/env bash
# Init script to manage the manage_my_process daemon

PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="./manage_my_process"

start_process() {
    # Start the process in background
    $PROCESS_SCRIPT &
    # Save PID to file
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop_process() {
    # Check if PID file exists
    if [ -f "$PID_FILE" ]; then
        # Kill the process
        kill "$(cat "$PID_FILE")" 2>/dev/null
        # Remove PID file
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    else
        echo "Error: PID file not found. Is the process running?"
    fi
}

restart_process() {
    # Stop if running
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")" 2>/dev/null
        rm -f "$PID_FILE"
    fi
    # Start again
    $PROCESS_SCRIPT &
    echo $! > "$PID_FILE"
    echo "manage_my_process restarted"
}

# Main script logic
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
