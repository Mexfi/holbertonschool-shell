#!/usr/bin/env bash
# This script creates a PID file, runs indefinitely, and handles signals appropriately

PID_FILE="/var/run/myscript.pid"

# Cleanup function
cleanup() {
    echo "Cleaning up..."
    rm -f "$PID_FILE"
    exit 0
}

# Signal handlers
trap 'echo "I hate the kill command"; cleanup' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap cleanup SIGQUIT

# Create PID file
echo $$ > "$PID_FILE"
echo "PID file created at $PID_FILE with PID: $$"

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
