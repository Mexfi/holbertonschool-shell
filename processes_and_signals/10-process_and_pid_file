#!/usr/bin/env bash
# Process and PID file management

# PID file path
PID_FILE="/var/run/myscript.pid"

# Create PID file
echo $$ > "$PID_FILE"

# Handle SIGTERM - delete file and terminate
trap 'echo "I hate the kill command"; rm -f "$PID_FILE"; exit 0' TERM

# Handle SIGINT - just display message
trap 'echo "Y U no love me?!"' INT

# Handle SIGQUIT - delete file and terminate  
trap 'rm -f "$PID_FILE"; exit 0' QUIT

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
