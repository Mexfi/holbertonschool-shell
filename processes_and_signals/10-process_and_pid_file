#!/usr/bin/env bash
# Script that creates a PID file, displays messages, and handles signals properly

PID_FILE="/var/run/myscript.pid"

# Create PID file immediately
echo $$ > "$PID_FILE"
echo "PID file created: $PID_FILE with PID: $$"

# Cleanup function
cleanup() {
    echo "Cleaning up and terminating..."
    rm -f "$PID_FILE"
    exit 0
}

# Set up signal handlers
trap 'echo "I hate the kill command"; cleanup' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap cleanup SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
