#!/usr/bin/env bash
# Create PID file and handle signals

# PID faylını yarat
echo $$ > /var/run/myscript.pid

# Cleanup funksiyası
cleanup() {
    rm -f /var/run/myscript.pid
    exit
}

# Signal handlerları təyin et
trap 'echo "I hate the kill command"; cleanup' TERM
trap 'echo "Y U no love me?!"' INT
trap cleanup QUIT

# Sonsuz loop
while true
do
    echo "To infinity and beyond"
    sleep 1
done
